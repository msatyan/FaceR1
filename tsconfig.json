{
    "compilerOptions": {
      "target": "es2015",
      "lib": [
        "es2015",
        "dom"
      ],
      "rootDir": "src",
      "outDir": "dist",
      "baseUrl": "./src",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,
      "types": ["node"]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.d.ts",
      "dist"
  ]  
}
