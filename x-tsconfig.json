{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "allowJs": true,
        "checkJs": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}
